
<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
 <%= render 'layouts/error_messages' , book:@book %>
<div class="field">
  <label for="book_title">
   Title
  </label>
</div>
<%= f.text_field :title %>

<div class="field">
  <label for="book_body">
    Body
  </label>
</div>
<%= f.text_area :body %>

<div class="actions">
</div>
<%= f.submit 'Update Book' %>
<% end %>

<span>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back","/books" %>
</span>
