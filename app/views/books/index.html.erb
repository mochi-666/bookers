<!DOCTYPE HTML>
<html lang="ja">
  <head>
    <title>bookers</title>
  </head>

  <body>
    <p id="notice"></p>
    <h1>Books</h1>
     <table>
       <thead>
        <tr>
          <th>Title</th>
          <th>body</th>
          <th colspan="3"></th>
        </tr>
       </thead>
       
       <tbody>
         <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td>
             <%= link_to "Show", book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
          <td>  
            <%= link_to "Destroy", book_path(book.id) , method: :delete, data: {confirm: "Are you sureï¼Ÿ"}%>
          </td>
        </tr>
          <% end %>
      </tbody>
    </table>
    
  <h2>
    New book
  </h2>
  
    <%= form_with model: @book, local:true do |f| %>
    <%= render 'layouts/error_messages' , book:@book %>
  <div class="field">
    <label for="book_title">
      Title
    </label>
  </div>
  <%= f.text_field :title %>
  
  <div class="field">
    <label for="book_body">
      Body
    </label>
  </div>
   <%= f.text_area :body %>
  
  <div class="actions">
  </div>
  <%= f.submit 'Create Book' %>
  <% end %>
  
  </body>
</html>